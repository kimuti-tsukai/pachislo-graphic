{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["pachislo.js"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "tasks": {
    "dev": "deno run --watch src/pachislo.ts",
    "test": "deno test",
    "demo": "deno run src/pachislo.ts",
    "serve": "deno run --allow-net --allow-read server.ts",
    "build": "deno run --allow-read --allow-write --allow-run scripts/build.ts",
    "generate-videos": "deno run --allow-read --allow-write scripts/generate-video-list.ts",
    "check": "deno check src/pachislo.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/"
  },
  "exclude": ["node_modules/", "dist/"]
}
