{
  "name": "Pachislo Game Simulator",
  "description": "A TypeScript implementation of a Pachislot (Japanese slot machine) game simulator built for Deno",
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    }
  },
  "languages": {
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint"
      ],
      "formatter": "language_server"
    }
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "tab_size": 2,
  "hard_tabs": false,
  "preferred_line_length": 80,
  "format_on_save": "on",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "code_actions_on_format": {
    "source.fixAll": true,
    "source.organizeImports": true
  }
}
